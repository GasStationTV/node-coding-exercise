{
  "name": "node-coding-exercise",
  "version": "1.0.0",
  "description": "GSTV coding exercise for BE candidates",
  "main": "index.js",
  "scripts": {
    "lint": "standard lib/**.js | snazzy",
    "release": "rm dist/* && NODE_ENV=production npm run build:tmpl & NODE_ENV=production npm run build:min:js & npm run build:min:css",
    "build": "npm run build:js & npm run build:css & npm run build:tmpl",
    "build:js": "browserify -d lib/client.js -o dist/app.js",
    "build:min:js": "browserify lib/client.js | uglifyjs -o dist/app.js",
    "build:css": "stylus -m styles/app.styl -o dist/app.css",
    "build:min:css": "stylus < styles/app.styl | cleancss -o dist/app.css",
    "build:tmpl": "jade -P src/templates/*.jade --out dist",
    "watch": "npm run watch:js & npm run watch:css & npm run watch:tmpl",
    "watch:js": "watchify -d lib/client.js -o dist/app.js",
    "watch:css": "stylus -w -m styles/app.styl -o dist/app.css",
    "watch:tmpl": "jade -w templates/*.jade --out dist",
    "test": "browserify test/index.js --node | node | faucet",
    "test:browser": "browserify test/index.js | browser-run | faucet",
    "security": "nsp package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GasStationTV/node-coding-exercise.git"
  },
  "keywords": [
    "Node"
  ],
  "author": "Aaron Olson <aaron.olson@gstv.com> (http://www.gstv.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GasStationTV/node-coding-exercise/issues"
  },
  "homepage": "https://github.com/GasStationTV/node-coding-exercise#readme",
  "devDependencies": {
    "babel": "^6.0.15",
    "babel-preset-es2015": "^6.1.18",
    "babel-runtime": "^6.1.4",
    "babelify": "^7.2.0",
    "browser-run": "^3.0.3",
    "browserify": "^12.0.1",
    "clean-css": "^3.4.7",
    "coverify": "^1.4.1",
    "envify": "^3.4.0",
    "faucet": "0.0.1",
    "jade": "^1.11.0",
    "node-dev": "^2.7.1",
    "nsp": "^2.0.2",
    "phantomjs": "^1.9.18",
    "redux": "^3.0.4",
    "riot": "^2.3.1",
    "riot-redux-mixin": "0.0.1",
    "riotify": "^0.1.2",
    "snazzy": "^2.0.1",
    "standard": "^5.3.1",
    "stylus": "^0.52.4",
    "tape": "^4.2.2",
    "uglify": "^0.1.5",
    "watchify": "^3.6.0",
    "ws": "^0.8.0"
  },
  "dependencies": {
    "koa": "^1.1.2",
    "koa-bodyparser": "^2.0.1",
    "koa-mount": "^1.3.0",
    "koa-router": "^5.2.3",
    "koa-static": "^1.5.2",
    "moment": "^2.10.6",
    "mongoose": "^4.2.5"
  },
  "browserify": {
    "extensions": [
      ".js",
      ".tag"
    ],
    "transform": [
      [
        "riotify",
        {
          "type": "babel",
          "template": "jade"
        }
      ],
      "babelify",
      "envify"
    ]
  }
}
